<header id="main">
    <h1>MovieViewer</h1>
</header>
<br>
<div class="container ">
    <div class="cow">
        <div class="login form">
            <h3>Log In</h3>
            <form action="/process/login" method="post">
                <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
                Email: <input type="text" name="login_email">
                Password: <input type="password" name="login_password">
                <input class="sub" type="submit" value="Log In">
            </form>
        </div>
</div>
<div class=" index">
        <h3>Most Recent Popular Movies</h3>
        <div class="movies">
            <% (0..26).each do |i| %>
            <div class="image <%= i %>">
            
            </div>
            <% end %>
        </div>
    </div>
<br>
<br>
<div class="cow">
        <div class="create form">
            <h3>Register</h3>
            <form action="/process/create" method="post">
                <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
                Userame: <input type="text" name="user[name]" >
                Email: <input type="text" name="user[email]">
                Password: <input type="password" name="user[password]">
                Confirm Password: <input type="password" name="user[con_create_Password]">
                <input class="sub" type="submit" value="Create User">
            </form>
        </div>
    </div>
</div>

<br>

<% if flash[:errors] %>
    <div >
        <div id="error_box">
            <div id="head">
                <p>!ERROR</p>
            </div>
            <h5 id="error"><%= flash[:errors] %></h5>
    </div>
    </div>
<% end %>


<br>